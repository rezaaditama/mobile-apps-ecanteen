<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cream"
    android:id="@+id/main"
    tools:context=".ProfilPenjualActivity">

    <!-- HEADER / TITLE -->
    <TextView
        android:id="@+id/tv1_profil_penjual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profil_title"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv1_profil_penjual"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="20dp">

            <!-- Foto Profil -->
            <!-- Lingkaran luar (GARIS HIJAU) -->
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="65dp"
                app:cardBackgroundColor="@color/orange"
                app:cardElevation="0dp">

                <!-- Lingkaran dalam (PUTIH) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="60dp"
                    app:cardBackgroundColor="@color/orange_muda"
                    app:cardElevation="0dp">

                    <!-- Foto Profil -->
                    <ImageView
                        android:id="@+id/img_foto_toko_profil_penjual"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profil"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>


            <!-- Nama -->
            <TextView
                android:id="@+id/tv_nama_toko_profil_penjual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store_name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tv_nama_penjual_profil_penjual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profil_nama_penjual"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_horizontal" />

            <!-- Section -->
            <TextView
                android:id="@+id/tv2_profil_penjual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profil_pa"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="30dp" />

            <!-- MENU EDIT PROFIL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_menu_profil">
                <LinearLayout
                    android:id="@+id/menu_edit_profil_profil_penjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <ImageView
                        android:id="@+id/img_logo_editprofil_profil_penjual"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_edit" />
                    <TextView
                        android:id="@+id/tv_edit_profil_profil_penjual"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/profil_edt_profil"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black" />
                    <ImageView
                        android:id="@+id/img_arrow_right_profil_penjual1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <!-- MENU TENTANG APLIKASI -->
            <LinearLayout
                android:id="@+id/menu_tentang_apk_profil_penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_menu_profil"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/menuTentangApkPenjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <ImageView
                        android:id="@+id/img_logoapk_profil_penjual"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logo" />
                    <TextView
                        android:id="@+id/tv_tentang_apk_profil_penjual"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/profil_tentang_apk"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/img_arrow_right_profil_penjual2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <!-- Logout -->
            <LinearLayout
                android:id="@+id/btn_logout_profil_penjual"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_button_logout_profil"
                android:paddingHorizontal="20dp">
                <ImageView
                    android:id="@+id/img_logo_keluar_profil_penjual"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_logout" />
                <TextView
                    android:id="@+id/tv_logout_profil_penjual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/profil_logout"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAVIGATION -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/bg_navbar_bottom"
        android:orientation="horizontal"
        android:weightSum="3"
        android:elevation="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/menu_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#9E9E9E" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda"
                android:textSize="12sp"
                android:textColor="#9E9E9E" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_penjual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_orders"
                app:tint="#9E9E9E" />

            <TextView
                android:id="@+id/tv_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Penjualan"
                android:textSize="12sp"
                android:textColor="#9E9E9E" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user_avatar"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textSize="12sp"
                android:textColor="@color/primary" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>