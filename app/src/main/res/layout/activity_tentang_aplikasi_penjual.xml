<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cream"
    tools:context=".TentangAplikasiPenjualActivity">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_back_tentang_apk_penjual"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_left"/>

        <TextView
            android:id="@+id/tv1_tentang_apk_penjual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/about_app"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"/>

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical">

            <!-- LOGO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <FrameLayout
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:background="@drawable/bg_logo_container"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img_logo_tentang_apk_penjual"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo"
                        android:scaleType="centerCrop"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_nama_apk_tentang_apk_penjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name_custom"
                    android:textSize="24sp"
                    android:textColor="@color/hijau"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tv_versi_tentang_apk_penjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_version"
                    android:textSize="12sp"
                    android:textColor="@color/abu"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <!-- DESKRIPSI -->
            <TextView
                android:id="@+id/tv_deskripsi_tentang_apk_penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/short_description"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"/>

            <TextView
                android:id="@+id/tv_isi_deskripsi_tentang_apk_penjual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_input_penjual"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text="@string/app_description"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/abu" />

            <!-- DEVELOPER -->
            <TextView
                android:id="@+id/tv_developer_tentang_apk_penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/developer_title"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_penjual"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_logo_code_tentang_apk_penjual"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_code"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nama_developer_tentang_apk_penjual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/developer_name"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"/>

                    <TextView
                        android:id="@+id/tv_uika_tentang_apk_penjual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/developer_campus"
                        android:textColor="@color/abu"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>

            <!-- FOOTER -->
            <TextView
                android:id="@+id/tv_hakcipta_tentang_apk_penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/copyright"
                android:textSize="11sp"
                android:textColor="@color/abu"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>