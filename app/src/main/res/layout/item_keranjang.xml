<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/img_produk_keranjang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_avatar" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nama_produk_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Menu"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold" />
            <TextView
                android:id="@+id/tv_harga_produk_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 15,000"
                android:textColor="@color/secondary"
                android:fontFamily="@font/poppins_regular" />
            <TextView
                android:id="@+id/tv_catatan_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan: Pedas banget ya"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"
                android:fontStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_minus_keranjang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_minus"
                android:background="@drawable/bg_login"/>
            <TextView
                android:id="@+id/tv_qty_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="1"
                android:fontFamily="@font/poppins_bold"/>
            <ImageButton
                android:id="@+id/btn_plus_keranjang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_input_add"
                android:background="@drawable/bg_login"
                app:tint="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>