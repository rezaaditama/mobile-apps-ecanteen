<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/tvJudulPesanan"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
        android:id="@+id/imgKrjArrowLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/lingkaran_putih"
        android:src="@drawable/ic_arrow_back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesanan"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:padding="16dp" />
    </LinearLayout>

    <!-- TAB -->
    <LinearLayout
        android:id="@+id/tabPesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvJudulPesanan"
        android:background="@color/white">

        <!-- TAB PESANAN AKTIF -->
        <LinearLayout
            android:id="@+id/tabAktif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:id="@+id/tvAktif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesanan Aktif"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>
            <View
                android:id="@+id/indicatorAktif"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/primary"/>
        </LinearLayout>

        <!-- TAB SELESAI -->
        <LinearLayout
            android:id="@+id/tabSelesai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:id="@+id/tvSelesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray"/>
            <View
                android:id="@+id/indicatorSelesai"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="@color/gray"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPesanan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabPesanan" />

    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum ada pesanan"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabPesanan" />

</androidx.constraintlayout.widget.ConstraintLayout>