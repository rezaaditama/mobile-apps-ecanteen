<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/krem"
    android:layout_height="match_parent">

    <!-- HEADER -->
    <TextView
        android:id="@+id/tvJudulPesanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Pesanan"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TAB -->
    <LinearLayout
        android:id="@+id/tabPesanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvJudulPesanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <!-- TAB PESANAN AKTIF -->
        <LinearLayout
            android:id="@+id/tabAktif"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tvAktif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesanan Aktif"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF7A00"/>

            <View
                android:id="@+id/indicatorAktif"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="#2ECC71"/>
        </LinearLayout>

        <!-- TAB SELESAI -->
        <LinearLayout
            android:id="@+id/tabSelesai"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tvSelesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#9E9E9E"/>

            <View
                android:id="@+id/indicatorSelesai"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="#2ECC71"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>

    <!-- SCROLL CONTENT -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tabPesanan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD PESANAN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_shop">

                    <!-- HEADER CARD -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:src="@drawable/toko_seblak"
                            android:padding="0dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Seblak Prasmanan "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Kantin UIKA lantai 1"
                                android:textColor="#666666"/>

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nomor pesanan"
                                android:textColor="#666666"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="#2507FGFFT6"
                                android:textColor="@color/primary"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Estimasi"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="right"
                                android:textColor="#666666"/>

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10-15 Menit"
                                android:textColor="@color/primary"
                                android:textSize="14sp"
                                android:gravity="right"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_pesanan_qris"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="lihat detail pesanan"
                        android:background="@drawable/bg_login"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <!-- CARD PESANAN 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_shop">

                    <!-- HEADER CARD 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:src="@drawable/toko_esteh"
                            android:padding="0dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/textView0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Es teh cap poci "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/textView80"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Kantin UIKA lantai 1"
                                android:textColor="#666666"/>

                            <TextView
                                android:id="@+id/textView90"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nomor pesanan"
                                android:textColor="#666666"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="#235GSHAGTY"
                                android:textColor="@color/primary"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/textView140"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Estimasi"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="right"
                                android:textColor="#666666"/>

                            <TextView
                                android:id="@+id/textView150"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3-5 Menit"
                                android:textColor="@color/primary"
                                android:textSize="14sp"
                                android:gravity="right"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_pesanan_cod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="lihat detail pesanan"
                        android:background="@drawable/bg_login"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
