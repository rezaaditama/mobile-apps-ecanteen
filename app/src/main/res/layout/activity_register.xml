<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdf8f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

    <!-- Image Header -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logo_kekantin" />

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lg_title"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textColor="#468f41"
        android:fontFamily="@font/bakso_sapi"
        android:layout_gravity="center_horizontal"/>

        <!-- Buyer & Seller Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_switch2"
        android:padding="4dp">

        <Button
            android:id="@+id/btn_pembeli"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Pembeli"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/selector_button_login2"
            android:backgroundTint="@null"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_penjual"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Penjual"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/selector_button_login2"
            android:backgroundTint="@null"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <!-- Student ID -->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/lg_email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Masukkan Email"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_input2"
        android:padding="15dp"
        android:inputType="number" />

        <TextView
        android:id="@+id/tv_no_handphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/lg_no_handphone" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Masukkan No Handphone"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_input2"
            android:padding="15dp"
            android:inputType="number" />

        <!-- Password -->
        <TextView
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/lg_password" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Masukkan Password"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_input2"
        android:padding="15dp"
        android:inputType="textPassword" />

        <TextView
        android:id="@+id/tv_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/lg_confirm_password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_input2"
            android:padding="15dp"
            android:inputType="textPassword" />



        <!-- registrasi Button -->


    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Daftar"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_login2"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />



    </LinearLayout>

</ScrollView>
