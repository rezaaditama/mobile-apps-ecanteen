<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".LogoutPenjualActivity">

    <!-- OVERLAY -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_overlay"/>

    <!-- MODAL CARD -->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_logout_card"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- ICON -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_logout_icon">

            <ImageView
                android:id="@+id/img_logo_logout_penjual"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logout" />
        </FrameLayout>

        <!-- TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="@string/logout_title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- DESCRIPTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/logout_desc"
            android:textColor="@color/abu"
            android:textSize="14sp" />

        <!-- BUTTON LOGOUT -->
        <Button
            android:id="@+id/btn_logout_penjual"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/bg_button_logout"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- BUTTON CANCEL -->
        <Button
            android:id="@+id/btn_cancel_logout_penjual"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_cancel"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/lg_cancel"
            android:textColor="@color/orange"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
