<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cream"
    tools:context=".BerandaPenjualActivity">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/img_beranda_penjual_foto_warung"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profil"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_beranda_penjual_nama_warung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/store_name"
                android:textSize="16sp"
                android:textColor="@color/orange"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:id="@+id/tv_beranda_penjual_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/store_status"
                android:textSize="12sp"
                android:textColor="@color/hijau"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>
    </LinearLayout>

    <!-- SCROLL AREA -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="16dp">

            <!-- CARD PEMASUKAN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_primary_penjual"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv3_beranda_penjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_income"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular" />

                <TextView
                    android:id="@+id/tv4_beranda_penjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_income_value"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background="@drawable/bg_chip_transparent_penjual"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_beranda_penjual_logo_shop"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_order" />

                    <TextView
                        android:id="@+id/tv5_beranda_penjual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/order_done"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>
            </LinearLayout>

            <!-- MENU GRID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="2">

                <!-- LAPORAN -->
                <LinearLayout
                    android:id="@+id/btn_beranda_penjual_laporan_penjualan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_green_penjual"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/img_beranda_penjual_logo_laporan_penjualan"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_report1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv6_beranda_penjual"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/report_sales"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_bold" />

                        <ImageView
                            android:id="@+id/img_beranda_penjual_arrow_right1"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/arrow_right" />
                    </LinearLayout>
                </LinearLayout>

                <!-- PESANAN -->
                <LinearLayout
                    android:id="@+id/btn_beranda_penjualan_proses_pesanan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_green_penjual"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/img_beranda_penjual_logo_proses_pesanan"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_process1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_beranda_penjual_proses_pesanan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/process_order"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/img_beranda_penjual_arrow_right2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/arrow_right" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- HEADER PESANAN AKTIF -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv7_beranda_penjual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pesanan_aktif"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:id="@+id/tv8_beranda_penjualan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lihat_semua"
                    android:textSize="14sp"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/poppins_bold" />
            </LinearLayout>

            <!-- ITEM PESANAN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ITEM 1 -->
                <LinearLayout
                    android:id="@+id/btn_beranda_penjual_pesanan_aktif1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_card_order_penjual"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_icon_green_penjual">

                        <ImageView
                            android:id="@+id/img_beranda_penjual_logo_pickup"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_checklist" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tv12_beranda_penjual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nama_reza"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_bold" />

                        <TextView
                            android:id="@+id/tv13_beranda_penjual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/id_reza"
                            android:textSize="12sp"
                            android:textColor="@color/abu"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/poppins_regular" />

                        <TextView
                            android:id="@+id/tv14_beranda_penjual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_badge_green_penjual"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:text="@string/pesanan_baru"
                            android:textColor="@color/hijau"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_beranda_penjual_arrow_right4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_right"
                        android:layout_marginTop="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- BOTTOM NAVIGATION (DI BAWAH) -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_navbar_bottom"
        android:orientation="horizontal"
        android:weightSum="3"
        android:elevation="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:id="@+id/menu_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda"
                android:textSize="12sp"
                android:textColor="@color/primary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_penjual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_orders"
                app:tint="#9E9E9E" />

            <TextView
                android:id="@+id/tv_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Penjualan"
                android:textSize="12sp"
                android:textColor="#9E9E9E" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user_avatar"
                app:tint="#9E9E9E" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textSize="12sp"
                android:textColor="#9E9E9E" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>